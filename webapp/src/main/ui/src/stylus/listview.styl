.list-item
    background-color #fff
    padding 10px
    margin-bottom 10px
    border-radius 8px
    border 1px solid transparent
    box-shadow 2px 2px 2px 2px rgba(0,0,0,0.7)
    &:hover
        cursor pointer
        background-color #333
        color white
    &.selected
        border 1px solid #FFC71F
        box-shadow 2px 2px 2px 2px rgba(255, 199, 31, 0.7)
        background-color #555
        &:hover
            background-color #333
    button
        float right
        margin-right 5px
        i
            margin-right 5px
    button.rem
        padding-right 0px
        float left
