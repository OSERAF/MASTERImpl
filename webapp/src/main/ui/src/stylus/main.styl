// Main stylus file. 
@import '../../vendor/bower/bootstrap/dist/css/bootstrap.min.css'
@import '../../vendor/bower/font-awesome/css/font-awesome.min.css'
// http://visionmedia.github.io/nib/
@import 'nib'
@import 'mixins'
@import 'vars'
@import 'masthead'
@import 'listview'
@import 'detailview'
@import 'resolvemodal'
@import 'deduplicatemodal'
@import 'splitmodal'
@import 'mergemodal'
@import 'labels'

.no-data
    float right
    margin-right 125px

network-view
    position absolute
    top 50px
    left 0px
    right 0px
    height 45%
    border-bottom 1px solid #ccc
    box-shadow 0 2px 2px 2px rgba(0,0,0,0.3)

.list-content
    position absolute
    top calc(45% + 50px)
    bottom 0px
    left 0px
    right 0px

.list-header
    color white
    background-color #333
    height 50px
    width calc(50% - 22px)
    border-top-left-radius 8px
    border-top-right-radius 8px
    margin 10px
    margin-bottom 0px
    .num-results
        float right
        margin-right 20px
        margin-top 10px
    h3
        margin-top 10px
        text-align center
        float left
        width calc(100% - 50px)

list-view
    position absolute
    top 60px
    bottom 10px
    left 10px
    width calc(50% - 22px)
    padding 10px
    border 1px solid #ccc
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color #ccc
    overflow auto

.list-body
    li
        list-style-type none

detail-view
    position absolute
    top 4px
    bottom 0px
    right 0px
    left 50%
    padding 10px
    padding-top 6px
    border-left 1px solid #ccc
    box-shadow -2px 2px 2px 2px rgba(0,0,0,0.3)

@font-face
    font-family 'FontAwesome'
    src url('../assets/fontawesome-webfont.eot?v=4.0.3')
    src url('../assets/fontawesome-webfont.eot?#iefix&v=4.0.3') format('embedded-opentype'), url('../assets/fontawesome-webfont.woff?v=4.0.3') format('woff'), url('../assets/fontawesome-webfont.ttf?v=4.0.3') format('truetype'), url('../assets/fontawesome-webfont.svg?v=4.0.3#fontawesomeregular') format('svg');
    font-weight normal
    font-style normal

@font-face
    font-family 'Glyphicons Halflings'
    src url('../assets/glyphicons-halflings-regular.eot')
    src url('../assets/glyphicons-halflings-regular.eot') format('embedded-opentype'), url('../assets/glyphicons-halflings-regular.woff') format('woff'), url('../assets/glyphicons-halflings-regular.ttf') format('truetype'), url('../assets/glyphics-halflings-regular.svg') format('svg');
    font-weight normal
    font-style normal
