.selection-details
    height 100%
    width 100%
    h3
        border-top-left-radius 8px
        border-top-right-radius 8px
        background-color #333
        color #fff
        margin 0
        padding 10px
        text-align center
        text-transform capitalize
        height 50px
    .no-data
        float left
        margin-left 25px
        margin-top 10px
        i
            margin-right 10px
    .details-inner
        height calc(100% - 50px)
        width 100%
        background-color #ccc
        border-bottom-left-radius 8px
        border-bottom-right-radius 8px
        border 1px solid #ccc
        padding 10px
        overflow auto
        .details-inner-cnt
            &.single
                background-color #fff
                border 1px solid #ccc
                box-shadow 2px 2px 2px 2px rgba(0,0,0,0.7)
                border-radius 8px
                margin-bottom 10px
                padding 10px
                label
                    display inline-block
                    margin-right 3px
            &.multi
                text-align center
                button
                    i
                        margin-right 5px
    .button-holder
        text-align center
        padding 10px


